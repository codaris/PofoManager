{
  "metadata": [
    {
      "src": [
        {
          "src": "../.",
          "files": [
            "**/*.csproj"
          ],
          "exclude": [ 
            "**/packages/**",
            "**/PofoManager/**"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "docs/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "../../docs",
    "template": [
      "default",
      "modern",
      "template"
    ],
    "globalMetadata": {
      "_appName": "Portfolio Manager",
      "_appTitle": "Portfolio Manager",
      "_enableSearch": true,
      "pdf": false
    }
  }
}